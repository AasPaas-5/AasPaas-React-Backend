                      <div class="pricebox">
                        <a href="/products?id=<%=trending._id%>" class="price">₹<%=trending.price%></a>
                      </div>
                    </div>
                  </div>
                  <% }%>
              </div>
            </div>
          </div>
        </div>
        </div>
