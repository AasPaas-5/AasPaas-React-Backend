        <div class="slider">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item">
                <img src="https://res.cloudinary.com/aaspaas/image/upload/v1667397451/sliderpic2_nmgxup.png"
                  class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item active">
                <img src="https://res.cloudinary.com/aaspaas/image/upload/v1667397444/sliderpic1_vdkg7r.png"
                  class="d-block w-100" alt="...">
              </div>

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="toprow">
          <div class="boxes">
            <div class="trending">
              <div class="recentlyheader">
                <div class="head">Recently added</div>
              </div>
              <div class="product1">
                <% for (let recentProd of recentProds){%>
                  <div class="prodtrend">
                    <a href="/products?id=<%=recentProd._id%>"><img src="<%=recentProd.images[0].sizing%>" /></a>
                    <div onclick="window.location.href = '/products?id=<%=recentProd._id%>'" class="prod1">
                      <div class="title"><a href="/products?id=<%=recentProd._id%>">
                          <%=recentProd.title%>
                        </a></div>
                      <div class="pricebox">
                        <a href="/products?id=<%=recentProd._id%>" class="price">₹<%=recentProd.price%></a>
                      </div>
                    </div>
                  </div>
                  <% }%>
              </div>
            </div>
            <div class="trending">
              <div class="trendingheader">
                <div class="head">Trending Right Now</div>
              </div>
              <div class="product1">
                <% for (let trending of trendings){%>
                  <div class="prodtrend">
                    <a href="/products?id=<%=trending._id%>"><img src="<%=trending.images[0].sizing%>" /></a>
